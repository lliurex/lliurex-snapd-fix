#!/bin/sh
# preinst script for lliurex-snapd-fixes
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install)
	    systemctl stop snapd.service || true
	    systemctl stop snapd.socket || true
	    [ -e /snap ] || mkdir /snap
	    systemctl start snapd.service || true
	    systemctl start snapd.socket || true
	    snap disable chromium || true
	    snap disable core22 || true
	    snap disable snapd || true
	    snap enable core22 || true
	    snap enable snapd || true
	    snap enable chromium || true

    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
